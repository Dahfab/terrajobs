= render partial: "partials/header--dark"

%section.jobIntro
    .background
    .wrapper
        .jobIntro__meta
            %span.category= @category.name
            %span.jobtype= @type.name
        %h1.h1.h1--jobhead= sanitize @job.position
        .jobIntro__logo
            - if @job.company.logo.attached?
                = image_tag(@job.company.logo_medium)
            - else
                %span Kein Logo

%section.jobDescription
    .wrapper
        .jobDescription__copy         
            %h2.h2 Beschreibung:
            %p= sanitize @job.description

            %h2.h2 Aufgaben:
            %p= sanitize @job.responsibilities

            %h2.h2 Anforderungen:
            %p= sanitize @job.requirements

            %h2.h2 Wir bieten:
            %p= sanitize @job.offers 

            %h2.h2 Wie Sie sich bewerben:
            %p= sanitize @job.how_to_apply           

        .jobDescription__sidebar
            %h2.h2.h2--sidebar Firma:
            %span= sanitize @job.company.name

            - if @job.apply_date.present?
                %h2.h2 Bewerbungsschluss:
                %span= @job.apply_date.strftime("%d.%m.%Y")

            - if @job.company.mail.present?
                %h2.h2.h2--sidebar E-Mail:
                %span= sanitize @job.company.mail

            = link_to("Jetzt bewerben", @job.apply_url)

= render partial: "partials/footer"


